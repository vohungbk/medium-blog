<div class='mt-4'>
  <h2>Update Course</h2>
  <form class='mt-4' method='post' action='/course/{{course._id}}?_method=PUT'>
    <div class='mb-3'>
      <label for='name' class='form-label'>Name</label>
      <input
        type='text'
        class='form-control'
        name='name'
        value='{{course.name}}'
      />
    </div>
    <div class='mb-3'>
      <label for='description' class='form-label'>Description</label>
      <textarea
        type='text'
        class='form-control'
        name='description'
      >{{course.description}}</textarea>
    </div>
    <div class='mb-3'>
      <label for='videoId' class='form-label'>Video Id</label>
      <input
        type='text'
        class='form-control'
        name='videoId'
        value='{{course.videoId}}'
      />
    </div>

    <button type='submit' class='btn btn-primary'>Submit</button>
  </form>
</div>